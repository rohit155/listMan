<%- include("partials/header") %>

    <section class="">
        <div class="container-fluid">
            <div class="row">
                <div class="brand center">
                    <img  src="https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg" width="50" alt="brand">
                </div>               
                <div class="userLeft center col-md-6">
                    <img src="https://picsum.photos/400" alt="Welcome">
                </div>

                <div class="userRight center col-md-6">
                    <form action="/signup" method="POST">
                        <h3>Sign Up</h3>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control" name="name" id="exampleInputEmail1">
                          </div>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email</label>
                          <input type="email" class="form-control" name="email" id="exampleInputEmail1">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword1">Password</label>
                          <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <button type="submit" class="btn btn-dark">Submit</button>
                      </form>
                      <div class="switchLogin">
                        <p>Already registered?</p>
                        <a class="btn btn-dark" href="/">SignIn</a>
                      </div>
                </div>
            </div>
        </div>
    </section>

<%- include("partials/footer") %>